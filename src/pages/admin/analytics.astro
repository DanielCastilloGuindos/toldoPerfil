---
import Layout from "@/layouts/AdminLayout.astro";
import LoginForm from "@/components/admin/LoginForm.astro";
import { db, Analytics, desc, gte, sql } from "astro:db";

const cookie = Astro.cookies.get("admin_session");
const isAuthenticated = cookie?.value === "authenticated";

// Range handling
const range = Astro.url.searchParams.get("range") || "7d";
const logType = Astro.url.searchParams.get("logType") || "interactions"; // 'all' | 'interactions' | 'views'

const days = range === "30d" ? 30 : range === "90d" ? 90 : range === "365d" ? 365 : 7;
const dateLimit = new Date();
dateLimit.setDate(dateLimit.getDate() - days);

const allEvents = await db.select().from(Analytics).where(gte(Analytics.created_at, dateLimit));

// Data aggregators
const viewsByDate: Record<string, number> = {};
const clickByDate: Record<string, number> = {};
const referrers: Record<string, number> = {};
const locations: Record<string, number> = {};
const devices: Record<string, number> = { 'Desktop': 0, 'Mobile': 0 };

// Initialize Dates
for (let i = 0; i < days; i++) {
    const d = new Date();
    d.setDate(d.getDate() - i);
    const dateStr = d.toLocaleDateString('es-ES', { day: '2-digit', month: '2-digit' });
    viewsByDate[dateStr] = 0;
    clickByDate[dateStr] = 0;
}

let totalPageViews = 0;
let totalContacts = 0;
let totalWhatsApp = 0;

const activityLog: any[] = [];

allEvents.forEach(event => {
    const d = new Date(event.created_at);
    const dateStr = d.toLocaleDateString('es-ES', { day: '2-digit', month: '2-digit' });
    const eventData = event.data as any;

    // Common Data extraction
    const city = eventData?.city && eventData?.city !== 'Unknown' ? eventData.city : null;
    const country = eventData?.country && eventData?.country !== 'Unknown' ? eventData.country : null;
    const locString = city ? `${city}, ${country}` : 'Desconocido';
    const dev = eventData?.device || 'Unknown';
    const ip = eventData?.ip || '-';

    // 1. Counters & Charts
    if (event.type === 'page_view') {
        totalPageViews++;
        if (viewsByDate[dateStr] !== undefined) viewsByDate[dateStr]++;
        
        // Referrer
        let source = 'Directo';
        if (eventData?.referrer) {
           try {
               const url = new URL(eventData.referrer);
               source = url.hostname.replace('www.', '');
               if (source.includes('google')) source = 'Google';
               else if (source.includes('facebook') || source.includes('instagram')) source = 'Social';
               else if (source === window.location.hostname) source = 'Interno'; 
           } catch(e) { source = 'Externo' }
        }
        if(source !== 'Interno') referrers[source] = (referrers[source] || 0) + 1;
        
        // Location
        if(city) locations[locString] = (locations[locString] || 0) + 1;

        // Device
        if (dev === 'Mobile' || dev === 'Desktop') devices[dev]++;
        else devices['Desktop']++;

    } else if (event.type === 'contact_click' || event.type === 'whatsapp_click') {
        if (event.type === 'contact_click') {
             totalContacts++;
             if (clickByDate[dateStr] !== undefined) clickByDate[dateStr]++;
        } else {
             totalWhatsApp++;
        }
    }

    // 2. Activity Log Logic
    // Filter based on param
    let includeInLog = false;
    let actionDescription = '';
    let typeLabel = '';
    let typeColor = '';

    if (logType === 'all') includeInLog = true;
    else if (logType === 'interactions') includeInLog = ['contact_click', 'whatsapp_click', 'faq_click'].includes(event.type);
    else if (logType === 'views') includeInLog = event.type === 'page_view';

    if (includeInLog) {
        if(event.type === 'page_view') {
            typeLabel = 'Vista';
            typeColor = 'text-gray-400 bg-gray-500/10 border-gray-500/20';
            actionDescription = eventData?.path || '/';
        } else if (event.type === 'contact_click') {
            typeLabel = 'Formulario';
            typeColor = 'text-green-400 bg-green-500/10 border-green-500/20';
            actionDescription = 'Inicio Formulario Contacto';
        } else if (event.type === 'whatsapp_click') {
            typeLabel = 'WhatsApp';
            typeColor = 'text-green-400 bg-green-500/10 border-green-500/20';
            actionDescription = 'Clic en botón WhatsApp';
        } else if (event.type === 'faq_click') {
            typeLabel = 'FAQ';
            typeColor = 'text-amber-400 bg-amber-500/10 border-amber-500/20';
            actionDescription = `Leyó: "${eventData?.question || 'Pregunta'}"`;
        }

        activityLog.push({
            date: d.toLocaleString(),
            type: typeLabel,
            typeColor,
            action: actionDescription,
            location: locString,
            ip,
            device: dev
        });
    }
});

// Post-process
const chartLabels = Object.keys(viewsByDate).reverse();
const chartViews = Object.values(viewsByDate).reverse();
const chartClicks = Object.values(clickByDate).reverse();

const topReferrers = Object.entries(referrers).sort(([, a], [, b]) => b - a).slice(0, 5);
const topLocations = Object.entries(locations).sort(([, a], [, b]) => b - a).slice(0, 5);
const deviceData = [devices['Desktop'], devices['Mobile']];

activityLog.reverse(); // Newest first
---

<Layout description="Analítica completa" title="Analítica Avanzada" canonical="https://toldoperfil.es">
    <main class="font-sans min-h-screen">
        {isAuthenticated ? (
            <div class="fixed inset-0 -z-10 bg-neutral-900">
                <div class="absolute inset-0 bg-[url('/img/carousel/protrait02.webp')] bg-cover bg-center opacity-20 blur-sm scale-105"></div>
                <div class="absolute inset-0 bg-neutral-900/80 mix-blend-multiply"></div>
            </div>

            <div class="p-6 max-w-7xl mx-auto space-y-8">
                <!-- Header -->
                <header class="flex flex-col md:flex-row justify-between items-center gap-4 bg-white/10 backdrop-blur-xl border border-white/10 rounded-2xl shadow-2xl px-6 py-4">
                     <div class="flex items-center gap-4">
                        <a href="/admin" class="p-2 bg-white/5 hover:bg-white/10 rounded-lg transition-colors border border-white/10">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                            </svg>
                        </a>
                        <div>
                            <h1 class="text-xl font-bold text-white tracking-tight">Analítica Total</h1>
                            <p class="text-xs text-indigo-200">Tráfico, Eventos y Ubicaciones</p>
                        </div>
                    </div>
                     <div class="flex bg-neutral-900/50 p-1 rounded-lg border border-white/10 overflow-x-auto max-w-full">
                        {['7d', '30d', '90d', '365d'].map(r => (
                            <a href={`?range=${r}&logType=${logType}`} class={`whitespace-nowrap px-4 py-1.5 rounded-md text-sm font-medium transition-all ${range === r ? 'bg-indigo-600 text-white shadow-lg' : 'text-indigo-200 hover:text-white'}`}>
                                {r === '365d' ? '1 Año' : r.toUpperCase()}
                            </a>
                        ))}
                    </div>
                </header>

                <!-- KPI Cards -->
                 <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="bg-indigo-900/30 border border-indigo-500/20 rounded-xl p-5">
                        <span class="text-indigo-200 text-xs uppercase font-bold tracking-wider">Visitas</span>
                        <div class="flex items-baseline gap-2 mt-1">
                            <span class="text-4xl font-bold text-white">{totalPageViews}</span>
                        </div>
                    </div>
                    <div class="bg-green-900/30 border border-green-500/20 rounded-xl p-5">
                        <span class="text-green-200 text-xs uppercase font-bold tracking-wider">Leads Generados</span>
                        <div class="flex items-baseline gap-2 mt-1">
                            <span class="text-4xl font-bold text-white">{totalContacts + totalWhatsApp}</span>
                        </div>
                        <div class="mt-2 text-[10px] text-green-300/50 flex gap-2">
                            <span>Forms: {totalContacts}</span>•<span>WhatsApp: {totalWhatsApp}</span>
                        </div>
                    </div>
                    <div class="bg-purple-900/30 border border-purple-500/20 rounded-xl p-5">
                         <span class="text-purple-200 text-xs uppercase font-bold tracking-wider">Conversión</span>
                        <div class="flex items-baseline gap-2 mt-1">
                            <span class="text-4xl font-bold text-white">
                                {totalPageViews > 0 ? (( (totalContacts + totalWhatsApp) / totalPageViews ) * 100).toFixed(1) : 0}%
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Charts -->
                <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
                    <div class="lg:col-span-3 bg-neutral-900/60 backdrop-blur-md border border-white/10 rounded-2xl p-6">
                        <h2 class="text-lg font-bold text-white mb-6">Tendencia de Tráfico</h2>
                        <div class="relative h-64 w-full">
                            <canvas id="trafficChart"></canvas>
                        </div>
                    </div>
                    <div class="lg:col-span-1 bg-neutral-900/60 backdrop-blur-md border border-white/10 rounded-2xl p-6 flex flex-col">
                         <h2 class="text-lg font-bold text-white mb-6">Dispositivos</h2>
                         <div class="relative h-48 w-full flex-1">
                            <canvas id="deviceChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Locations & Sources -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Top Locations -->
                     <div class="bg-neutral-900/60 backdrop-blur-md border border-white/10 rounded-2xl p-6">
                        <h2 class="text-lg font-bold text-white mb-6">Top Ubicaciones</h2>
                         <div class="space-y-4">
                            {topLocations.length > 0 ? topLocations.map(([loc, count], index) => (
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center gap-3">
                                        <span class="text-xs font-mono text-indigo-400 bg-indigo-500/10 w-5 h-5 flex items-center justify-center rounded">{index + 1}</span>
                                        <span class="text-sm text-white font-medium capitalize truncate max-w-[200px]" title={loc}>{loc}</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <div class="w-16 h-1.5 bg-white/5 rounded-full overflow-hidden">
                                            <div class="h-full bg-indigo-500 rounded-full" style={`width: ${(count / totalPageViews) * 100}%`}></div>
                                        </div>
                                        <span class="text-xs text-indigo-200 w-6 text-right">{count}</span>
                                    </div>
                                </div>
                            )) : (
                                <div class="text-center text-white/30 text-sm py-8">Sin datos de ubicación</div>
                            )}
                        </div>
                    </div>

                    <!-- Top Referrers -->
                     <div class="bg-neutral-900/60 backdrop-blur-md border border-white/10 rounded-2xl p-6">
                        <h2 class="text-lg font-bold text-white mb-6">Top Fuentes</h2>
                         <div class="space-y-4">
                            {topReferrers.length > 0 ? topReferrers.map(([source, count], index) => (
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center gap-3">
                                        <span class="text-xs font-mono text-purple-400 bg-purple-500/10 w-5 h-5 flex items-center justify-center rounded">{index + 1}</span>
                                        <span class="text-sm text-white font-medium capitalize truncate max-w-[120px]" title={source}>{source}</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <div class="w-16 h-1.5 bg-white/5 rounded-full overflow-hidden">
                                            <div class="h-full bg-purple-500 rounded-full" style={`width: ${(count / totalPageViews) * 100}%`}></div>
                                        </div>
                                        <span class="text-xs text-indigo-200 w-6 text-right">{count}</span>
                                    </div>
                                </div>
                            )) : (
                                <div class="text-center text-white/30 text-sm py-8">Sin datos de fuentes</div>
                            )}
                        </div>
                    </div>
                </div>

                <!-- Detailed Activity Log -->
                 <div class="bg-neutral-900/60 backdrop-blur-md border border-white/10 rounded-2xl overflow-hidden flex flex-col">
                    <div class="p-6 border-b border-white/5 flex flex-col sm:flex-row justify-between items-center gap-4">
                        <div>
                            <h2 class="text-lg font-bold text-white">Registro de Actividad</h2>
                            <p class="text-xs text-indigo-200">Historial completo de eventos</p>
                        </div>
                        <div class="flex bg-neutral-900 p-1 rounded border border-white/10">
                            <a href={`?range=${range}&logType=interactions`} class={`px-3 py-1 text-xs font-medium rounded transition-colors ${logType === 'interactions' ? 'bg-white/10 text-white' : 'text-indigo-300 hover:text-white'}`}>Interacciones</a>
                            <a href={`?range=${range}&logType=views`} class={`px-3 py-1 text-xs font-medium rounded transition-colors ${logType === 'views' ? 'bg-white/10 text-white' : 'text-indigo-300 hover:text-white'}`}>Vistas</a>
                            <a href={`?range=${range}&logType=all`} class={`px-3 py-1 text-xs font-medium rounded transition-colors ${logType === 'all' ? 'bg-white/10 text-white' : 'text-indigo-300 hover:text-white'}`}>Todo</a>
                        </div>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full text-left text-sm text-indigo-100">
                            <thead class="bg-white/5 text-xs text-indigo-300 font-bold uppercase tracking-wider">
                                <tr>
                                    <th class="px-6 py-3">Fecha</th>
                                    <th class="px-6 py-3">Evento</th>
                                    <th class="px-6 py-3">Acción / Detalle</th>
                                    <th class="px-6 py-3">Origen</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-white/5">
                                {activityLog.length > 0 ? activityLog.slice(0, 20).map(log => (
                                    <tr class="hover:bg-white/5 group transition-colors">
                                        <td class="px-6 py-3 whitespace-nowrap text-xs text-white/50">{log.date}</td>
                                        <td class="px-6 py-3">
                                            <span class={`inline-flex items-center px-2 py-0.5 rounded text-[10px] font-bold uppercase border ${log.typeColor}`}>
                                                {log.type}
                                            </span>
                                        </td>
                                        <td class="px-6 py-3 text-xs w-full max-w-xs truncate" title={log.action}>
                                            <span class="text-white font-medium">{log.action}</span>
                                        </td>
                                        <td class="px-6 py-3 text-xs text-nowrap">
                                            <div class="text-white/80">{log.location}</div>
                                            <div class="text-[10px] text-white/30">{log.device} • {log.ip}</div>
                                        </td>
                                    </tr>
                                )) : (
                                    <tr><td colspan="4" class="px-6 py-8 text-center text-white/30">No hay eventos para este filtro</td></tr>
                                )}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

             <script src="https://cdn.jsdelivr.net/npm/chart.js" is:inline></script>
            <script define:vars={{ chartLabels, chartViews, chartClicks, deviceData }}>
                // --- Traffic Chart ---
                const ctx = document.getElementById('trafficChart');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: chartLabels,
                        datasets: [
                            {
                                label: 'Visitas',
                                data: chartViews,
                                borderColor: '#818cf8',
                                backgroundColor: 'rgba(129, 140, 248, 0.1)',
                                borderWidth: 2,
                                tension: 0.4,
                                fill: true,
                                pointRadius: 0,
                                pointHitRadius: 10
                            },
                             {
                                label: 'Interact.',
                                data: chartClicks,
                                borderColor: '#4ade80',
                                backgroundColor: 'rgba(74, 222, 128, 0.1)',
                                borderWidth: 2,
                                tension: 0.4,
                                pointRadius: 3
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { labels: { color: '#e0e7ff' } } },
                        scales: {
                            y: { beginAtZero: true, grid: { color: 'rgba(255, 255, 255, 0.05)' }, ticks: { color: '#a5b4fc' } },
                            x: { grid: { display: false }, ticks: { color: '#a5b4fc', maxTicksLimit: 8 } }
                        }
                    }
                });

                // --- Device Chart ---
                const ctxDevice = document.getElementById('deviceChart');
                new Chart(ctxDevice, {
                    type: 'doughnut',
                    data: {
                        labels: ['Desktop', 'Móvil'],
                        datasets: [{ data: deviceData, backgroundColor: ['#6366f1', '#a855f7'], borderWidth: 0 }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { position: 'bottom', labels: { color: '#e0e7ff', usePointStyle: true } } },
                    }
                });
            </script>
        ) : (
            <LoginForm />
        )}
    </main>
</Layout>
