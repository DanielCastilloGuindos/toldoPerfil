---
import ClientLayout from '@/layouts/ClientLayout.astro';
import { clients, getStaticProductsPaths } from "@/consts/clients.ts";
import ProductCard from '@/components/ProductCard.astro'

export function getStaticPaths() {
	return getStaticProductsPaths();
}

const { clientId } = Astro.params;

const selectedClient = clients.find(client => client.id === clientId );
const { id, title, description, images } = selectedClient;

const path = `/img/works/${id}/`
---

<ClientLayout
description="Toldo Perfil: Especialistas en toldos personalizados de alta calidad. Desde toldos retráctiles para terrazas hasta pérgolas elegantes para jardines, ofrecemos soluciones adaptadas a tus necesidades. ¡Transforma tu espacio al aire libre con estilo y protección con Toldo Perfil!"
title=`Toldo Perfil - ${title}` 
>
	<main class="font-sans">
		<header class="sticky inset-0 bg-indigo-950 flex justify-center items-center sm:h-32 z-10">
			<h1
				class="py-4 text-[1.65rem] leading-9 tracking-wider font-bold uppercase"
				transition:name={ "title_" + id }>
				{ title }
			</h1>

			<a
				href="/"
				aria-label="Enlace a la pagina principal de Toldo Perfil"
				class="absolute top-1/2 right-6 sm:right-16 -translate-y-1/2 w-6 sm:w-12 h-6 sm:h-12 border-2 border-white hover:border-indigo-500 -rotate-45 hover:rotate-45 transition-all rounded-full group"
			>
				<span class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-2/3 h-[.1rem] bg-white group-hover:bg-indigo-500 transition-all "></span>
				<span class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-2/3 h-[.1rem] bg-white group-hover:bg-indigo-500 rotate-90 transition-all "></span>
			</a>
			</button>
		</header>
		<section class="w-full px-auto">
			<div class="grid grid-cols-1 sm:grid-cols-2 gap-6 justify-center items-start w-full md:max-w-5xl mx-auto">
				<aside class="py-4 grid grid-cols-1 sm:grid-cols-2 gap-2 sm:gap-6 px-2 sm:px-0 w-full sm:max-w-6xl">
					{ images.map((image) => {
						return (
							<img
								class="relative object-cover aspect-[1.82/1] overflow-hidden rounded-lg hover:-translate-y-0.5 sm:[transition-property: translate] duration-1000 sm:duration-200 ease-linear scroll-effect"
								alt=`Imagen de ${title}`
								src={ path + image }
								transition:name={"image_" + image}
							/>
						)
					}) }
				</aside>
	
				<article>
					<p class="sm:pt-4 px-4 sm:px-0 text-[14px] sm:text-xl font-light text-center sm:text-justify tracking-wider">Lorem ipsum dolor sit amet consectetur adipisicing elit. Unde nam vero illum consequuntur, quidem officiis in nobis hic sunt officia dicta eaque nulla impedit aspernatur repellat nisi. Eos at mollitia magni magnam, exercitationem velit! Vero cupiditate velit non recusandae soluta voluptatibus molestiae, iure assumenda sunt? Eligendi obcaecati iste nesciunt laborum excepturi voluptatibus dolorem! Odit, esse error. Asperiores nisi dolor ducimus cupiditate iure officia eligendi, harum repudiandae rerum culpa autem dolores odit dolorem veritatis deserunt, delectus obcaecati non consectetur dolore aliquid accusantium! Laudantium autem dolorem nam iste nisi deleniti maxime unde aperiam ipsa asperiores, omnis at iure aspernatur provident voluptatem.</p>
				</article>
			</div>
		</section>
	</main>
</ClientLayout>