<!-- Script para abrir y cerrar el popup -->
<script>
	import { $, $$ } from "@/consts/dom-selector";

	function openDialog() {
		$('dialog#popUp').showModal();
	}

	function closeDialog() {
		$('dialog#popUp').close();
	}
</script>
