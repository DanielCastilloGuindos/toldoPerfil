---
import Action from "@/components/Action.astro";
import Typography from "@/components/Typography.astro";

const { error, message, contextMessage } = Astro.props;
---

<section
	class="relative min-h-[70vh] flex flex-col items-center justify-center overflow-hidden px-4 py-20"
>
	<!-- Background Effects -->
	<div class="absolute inset-0 -z-10 bg-white">
		<div
			class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-indigo-500/10 blur-[120px] rounded-full"
		>
		</div>
		<div
			class="absolute top-1/4 right-1/4 w-[300px] h-[300px] bg-purple-500/5 blur-[100px] rounded-full"
		>
		</div>
	</div>

	<div
		class="relative z-10 max-w-2xl w-full text-center space-y-8 animate-fade-in"
	>
		<div class="space-y-2">
			<span
				class="text-sm font-bold tracking-[0.2em] text-indigo-600 uppercase"
				>Error {error}</span
			>
			<h1
				class="text-6xl md:text-8xl font-black text-indigo-950 tracking-tighter"
			>
				{message}
			</h1>
		</div>

		<div class="max-w-md mx-auto">
			<p class="text-xl text-indigo-900/70 leading-relaxed font-light">
				{contextMessage}
			</p>
		</div>

		<div
			class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-8"
		>
			<a
				href="/"
				class="w-full sm:w-auto px-8 py-4 bg-indigo-950 text-white rounded-2xl font-bold shadow-xl shadow-indigo-950/20 hover:-translate-y-1 transition-all duration-300"
			>
				Volver al Inicio
			</a>
			<a
				href="/#contact-us"
				class="w-full sm:w-auto px-8 py-4 bg-white text-indigo-950 border border-indigo-100 rounded-2xl font-bold shadow-sm hover:bg-neutral-50 hover:-translate-y-1 transition-all duration-300"
			>
				Contactar Soporte
			</a>
		</div>

		<div class="pt-12 flex items-center justify-center gap-8 opacity-40">
			<div class="h-[1px] w-12 bg-indigo-900/20"></div>
			<p
				class="text-xs uppercase tracking-widest font-bold text-indigo-900"
			>
				ToldoPerfil
			</p>
			<div class="h-[1px] w-12 bg-indigo-900/20"></div>
		</div>
	</div>
</section>

<style>
	@keyframes fade-in {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
	.animate-fade-in {
		animation: fade-in 0.8s ease-out forwards;
	}
</style>
